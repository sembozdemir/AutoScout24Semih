<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_medium">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/listItemVehicleImageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_image_height"
                tools:src="@drawable/ic_placeholder_vehicle"/>

            <TextView
                android:id="@+id/listItemVehicleTextViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_medium"
                android:layout_marginStart="@dimen/space_medium"
                android:textAppearance="@style/TextStyle.34.Bold"
                tools:text="BMW 116i"/>

            <TextView
                android:id="@+id/listItemVehicleTextViewFuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_medium"
                android:textAppearance="@style/TextStyle.14"
                android:layout_marginStart="@dimen/space_medium"
                tools:text="Gasoline"/>

            <TextView
                android:id="@+id/listItemVehicleTextViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_medium"
                android:layout_marginBottom="@dimen/space_medium"
                android:textAppearance="@style/TextStyle.24.Bold.Orange"
                android:layout_marginStart="@dimen/space_medium"
                tools:text="â‚¬3,000"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>